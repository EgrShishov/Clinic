{
  "GlobalConfiguration": {
    "BaseUrl": "https://localhost:5051"
  },
  "Routes": [
    // Authentication Web API
    {
      "UpstreamPathTemplate": "/gateway/auth/sign-in",
      "UpstreamHttpMethod": [ "Post" ],
      "DownstreamPathTemplate": "/api/auth",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5051
        }
      ]
    },
    {
      "UpstreamPathTemplate": "/gateway/auth/sign-up",
      "UpstreamHttpMethod": [ "Post" ],
      "DownstreamPathTemplate": "/api/auth",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5051
        }
      ]
    },
    {
      "UpstreamPathTemplate": "/gateway/auth/sign-out",
      "UpstreamHttpMethod": [ "Post" ],
      "DownstreamPathTemplate": "/api/auth",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5051
        }
      ]
    },
    {
      "UpstreamPathTemplate": "/gateway/auth/refresh",
      "UpstreamHttpMethod": [ "Post" ],
      "DownstreamPathTemplate": "/api/auth",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5051
        }
      ]
    },
    {
      "UpstreamPathTemplate": "/gateway/auth/verify",
      "UpstreamHttpMethod": [ "Get" ],
      "DownstreamPathTemplate": "/api/auth",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5051
        }
      ]
    },
    {
      "UpstreamPathTemplate": "/gateway/auth/account/{id}",
      "UpstreamHttpMethod": [ "Get" ],
      "DownstreamPathTemplate": "/api/auth",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5051
        }
      ]
    },

    // Appointments Web Api
    {
      "UpstreamPathTemplate": "/gateway/appointments/",
      "UpstreamHttpMethod": [ "Get" ],
      "DownstreamPathTemplate": "/api/appointments",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5051
        }
      ],
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer",
        "AllowedScopes": []
      },
      "RouteClaimsRequirement": {
        "Role": "Patient"
      }
    },
    {
      "UpstreamPathTemplate": "/gateway/articles/{id}",
      "UpstreamHttpMethod": [ "Get", "Delete" ],
      "DownstreamPathTemplate": "/api/articles/{id}",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5001
        }
      ]
    }
  ]
}